<body class="bg-dark">

{% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey }}
    </div>
{% endif %}

<div class="sufee-login d-flex align-content-center flex-wrap">
    <div class="container">
        <div class="login-content">
            <div class="login-logo">
                <a href="index.html">
                    My Wod Journal - inscription
                </a>
            </div>
            
            <div class="login-form">
                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'enctype': 'multipart/form-data'}}) }}
            <div class="row form-group">
                {{ form_errors(form.fullName) }}
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nom/pr√©nom</label></div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row form-group">
                {{ form_errors(form.username) }}
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nom d'utilisateur</label></div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row form-group">
                {{ form_errors(form.email) }}
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Email</label></div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row form-group">
                {{ form_errors(form.password.first) }}
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Mot de passe</label></div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row form-group">
                {{ form_errors(form.password.second) }}
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Confirmer</label></div>
                <div class="col-12 col-md-9">
                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

<button type="submit"  class="btn btn-success btn-flat m-b-30 m-t-30">S'inscrire !</button>
{{ form_end(form) }}
            </div>
        </div>
    </div>
</div>


