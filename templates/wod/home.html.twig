{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
<h2 style="text-align: center;">Communauté</h2><br />
<p style="text-align: center; font-size: 20px;">Découvrez les entrainement des autres membres de la communauté</p><br />
    {% for wod in listWods %}
        <div class="container">
                <div class="card">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <h2 class="text-light display-6">  {{ wod.name|upper }}</h2>
                                <i style="color: #6f86d6;">effectué par {{ wod.username }}</i>
                                <p>{{ wod.date }}</p>
                        </li>
                        <li class="list-group-item">
                            <strong>Temps:</strong> <br />
                            {{ wod.time }}
                        </li>
                        <li class="list-group-item">
                            <strong>Workout:</strong><br />
                            {{ wod.work|raw }}
                        </li>
                        <li class="list-group-item">
                            <strong>Poids utilisés:</strong><br />
                            {{ wod.weight|raw }}
                        </li>
                        <li class="list-group-item">
                            <strong>Commentaire:</strong><br />
                            {{ wod.comment|raw }}
                        </li>
                        <li class="list-group-item">
                            <strong>Action:</strong><br />
                            <a href="{{ path('add_todolist', {'wodId': wod.id}) }}"><button class="btn btn-primary">A faire plus tard</button></a>
                            <a href="{{ path('wod', {'name': wod.name, 'workout': wod.work, 'weights': wod.weight}) }}"><button class="btn btn-success">J'ai fait ce WOD</button></a>
                        </li>
                    </ul>

                </div>
        </div>


    {% endfor %}
{% endblock %}
